<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ProfileInformationActivity">

    <include
        android:id="@+id/llTop"
        layout="@layout/red_background_toolbar"/>

    <LinearLayout
        android:layout_below="@id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/login_edittext_bg">
            
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/profile_unselected"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_name"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="12sp"
                    android:textColor="@color/colorDarkGrey"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shivani"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="14sp"
                    android:textColor="@color/colorDark"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/email"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_email_address"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="12sp"
                    android:textColor="@color/colorDarkGrey"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shivani"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="14sp"
                    android:textColor="@color/colorDark"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layoutDirection="ltr"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg">

            <TextView
                android:id="@+id/tvDialCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+966"
                android:textColor="@color/colorDark"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/bold_italic"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivDropDown"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dropdown"
                android:layout_marginStart="10dp"/>



            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mobile"
                android:layout_marginStart="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_number"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="12sp"
                    android:textColor="@color/colorDarkGrey"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shivani"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="14sp"
                    android:textColor="@color/colorDark"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="12sp"
                    android:textColor="@color/colorDarkGrey"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="female"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="14sp"
                    android:textColor="@color/colorDark"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dob"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="12sp"
                    android:textColor="@color/colorDarkGrey"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/tvDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="female"
                    android:fontFamily="@font/bold_italic"
                    android:textSize="14sp"
                    android:textColor="@color/colorDark"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:gravity="center"
        android:backgroundTint="@color/colorLightPink"
        android:background="@drawable/btn_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bold_italic"
        android:textColor="@color/colorDark"/>



</RelativeLayout>