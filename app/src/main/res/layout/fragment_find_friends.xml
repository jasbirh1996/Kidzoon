<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.FindFriendsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlFriends"
        android:layout_width="match_parent"
        android:layout_height="370dp">
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/ivFriendsImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:siRadius="20dp"
            app:siBorderColor="@color/colorWhite"
            android:src="@drawable/profile_image"/>

        </RelativeLayout>


                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="7dp"
                    android:layout_alignBottom="@id/rlFriends"
                    android:layout_marginBottom="15dp"
                android:paddingEnd="7dp"
                android:paddingBottom="2dp"
                android:layout_centerInParent="true"
                android:paddingTop="2dp"
                android:background="@drawable/btn_bg"
                android:visibility="visible"
                android:backgroundTint="@color/colorOrange">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/premium"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="level 4"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/bold_italic"/>

            </LinearLayout>
                       <RelativeLayout
                android:id="@+id/llProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlFriends"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:padding="10dp"
                android:layout_marginTop="-19dp"
                android:background="@drawable/profile_light_red_bg">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold_italic"
                android:text="shivani"
            android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorDark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold_italic"
                android:text="shivani"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/llNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/bold_italic"
                        android:text="120"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/bold_italic"
                        android:text="@string/friends"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/bold_italic"
                        android:text="120"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/bold_italic"
                        android:text="@string/followers"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFollowing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/bold_italic"
                        android:text="120"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorDark"
                        android:textSize="16sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/bold_italic"
                        android:text="@string/following"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
    </LinearLayout>
            </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_below="@id/llProfile"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/ivAccept"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="7dp"
            android:src="@drawable/accept"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/ivReject"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="7dp"
            android:src="@drawable/cancel"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>